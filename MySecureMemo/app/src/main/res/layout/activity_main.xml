<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/memoText"
        android:background="@android:drawable/edit_text"
        android:layout_gravity="left|top"
        android:gravity="top"
        android:scrollbars="vertical"
        android:autoLink="none"
        android:editable="true"
        android:textColor="#154820"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/passDecipher"
            android:layout_below="@+id/memoText"
            android:layout_marginTop="5dp"
            android:layout_gravity="left|bottom"
            android:enabled="true"
            android:ems="11"
            android:background="@drawable/editsharpstyle"
            android:height="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密显示"
            android:id="@+id/buttonDecipher"
            android:layout_below="@+id/memoText"
            android:layout_toRightOf="@+id/passDecipher"
            android:layout_marginLeft="10dp"
            android:layout_alignRight="@+id/memoText"
            android:layout_gravity="right|bottom"
            style="@style/Widget.AppCompat.Button"
            android:onClick="OnDecipher"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保 存"
        android:id="@+id/buttonSave"
        android:layout_below="@+id/passDecipher"
        android:layout_marginTop="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonDecipher"
        style="@style/Widget.AppCompat.Button"
        android:onClick="OnMemoSave"/>

</RelativeLayout>
